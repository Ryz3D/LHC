{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build LHC",
            "command": "g++",
            "args": [
                "-g",
                // "-O3",
                "-o",
                "lhc.exe",
                "src\\*.cpp",
                "src\\**\\*.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "build file",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "bin\\${fileBasenameNoExtension}.exe",
                "${relativeFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}